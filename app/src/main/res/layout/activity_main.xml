<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    tools:context="com.example.bookapp.MainActivity">



    <include layout="@layout/toolbar"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:id="@+id/viewpager"
        />


    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        app:mbn_circleColor="@color/back"
        app:mbn_selectedIconColor="@color/pink"
        app:mbn_countTextColor="@color/pink"
        app:mbn_defaultIconColor="@color/pink"
        app:mbn_backgroundBottomColor="@color/card"/>






</LinearLayout>